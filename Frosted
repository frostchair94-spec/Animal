<div class="box">
  <h3>ğŸ¦ Animaux (MammifÃ¨res)</h3>
  <p>Lions : <span id="lions">0</span></p>
  <p>Production : <span id="rate">0</span> gold / heure</p>
  <button onclick="buyLion()">Acheter un Lion (100 gold)</button>
</div>

<div class="box">
  <h3>ğŸš€ Boost</h3>
  <p>Boost actif : <span id="boost">x1</span></p>
  <button onclick="buyBoost()">Pack Boost x2 (200 gold / 1h)</button>
</div>

<div class="box">
  <h3>ğŸ“º PublicitÃ©</h3>
  <button onclick="watchAd()">Regarder une vidÃ©o (+50 gold)</button>
</div>

<div class="box">
  <h3>ğŸ’¸ Withdraw</h3>
  <button onclick="withdraw()">Demander un retrait</button>
</div>

<script>
let gold = 0;
let lions = 0;
let boost = 1;
let lastUpdate = Date.now();

// Calcul passif
function updateGold() {
  const now = Date.now();
  const diff = (now - lastUpdate) / 3600000;
  const income = lions * 10 * boost * diff;
  gold += income;
  lastUpdate = now;
  render();
}

// Acheter un animal
function buyLion() {
  updateGold();
  if (gold >= 100) {
    gold -= 100;
    lions++;
  } else alert("Pas assez de gold");
  render();
}

// Boost
function buyBoost() {
  updateGold();
  if (gold >= 200) {
    gold -= 200;
    boost = 2;
    setTimeout(() => boost = 1, 3600000);
  } else alert("Pas assez de gold");
  render();
}

// Pub
function watchAd() {
  gold += 50;
  render();
}

// Collect
function collect() {
  updateGold();
}

// Withdraw
function withdraw() {
  updateGold();
  if (gold >= 1000) {
    alert("Demande de retrait envoyÃ©e !");
    gold = 0;
  } else {
    alert("Minimum 1000 gold");
  }
}

// Affichage
function render() {
  document.getElementById("gold").innerText = gold.toFixed(0);
  document.getElementById("lions").innerText = lions;
  document.getElementById("rate").innerText = lions * 10 * boost;
  document.getElementById("boost").innerText = "x" + boost;
}

setInterval(updateGold, 5000);
render();
</script>

